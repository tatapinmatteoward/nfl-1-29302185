---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Our Premium Casino Gaming Services" description="Discover GokenSacks' comprehensive suite of casino gaming services, from personalized game recommendations to expert strategy consulting and VIP experiences.">
  
  <!-- Hero Section -->
  <div class="relative overflow-hidden bg-black">
    <div class="absolute inset-0 bg-gradient-to-br from-primary/20 to-accent/10"></div>
    <div class="absolute w-full h-full">
      <div class="animate-pulse-slow absolute top-10 left-10 w-72 h-72 bg-primary/10 rounded-full blur-3xl"></div>
      <div class="animate-pulse-slow absolute bottom-10 right-10 w-96 h-96 bg-accent/10 rounded-full blur-3xl"></div>
    </div>
    
    <div class="container mx-auto px-4 py-24 relative z-10">
      <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 tracking-tight">
        Premium Casino <span class="text-primary">Gaming Services</span>
      </h1>
      <p class="text-xl text-gray-300 max-w-2xl">
        Elevate your gaming experience with personalized consulting, VIP access, and expert guidance from GokenSacks.
      </p>
    </div>
  </div>

  <!-- Services Grid -->
  <section class="bg-black/95 py-20">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-3 gap-8">
        
        <!-- Service Card 1 -->
        <div class="group relative overflow-hidden rounded-lg bg-gradient-to-br from-gray-900 to-black p-8 transition-all duration-300 hover:-translate-y-2">
          <div class="absolute inset-0 bg-primary/5"></div>
          <div class="relative z-10">
            <h3 class="text-2xl font-bold text-primary mb-4">Game Selection & Strategy</h3>
            <ul class="space-y-3 text-gray-300">
              <li class="flex items-center">
                <span class="mr-2 text-primary">►</span>
                Personalized game recommendations
              </li>
              <li class="flex items-center">
                <span class="mr-2 text-primary">►</span>
                Advanced strategy development
              </li>
              <li class="flex items-center">
                <span class="mr-2 text-primary">►</span>
                Odds analysis & optimization
              </li>
            </ul>
          </div>
        </div>

        <!-- Service Card 2 -->
        <div class="group relative overflow-hidden rounded-lg bg-gradient-to-br from-gray-900 to-black p-8 transition-all duration-300 hover:-translate-y-2">
          <div class="absolute inset-0 bg-accent/5"></div>
          <div class="relative z-10">
            <h3 class="text-2xl font-bold text-accent mb-4">VIP Experience</h3>
            <ul class="space-y-3 text-gray-300">
              <li class="flex items-center">
                <span class="mr-2 text-accent">►</span>
                Exclusive casino access
              </li>
              <li class="flex items-center">
                <span class="mr-2 text-accent">►</span>
                Priority reservations
              </li>
              <li class="flex items-center">
                <span class="mr-2 text-accent">►</span>
                Personal concierge service
              </li>
            </ul>
          </div>
        </div>

        <!-- Service Card 3 -->
        <div class="group relative overflow-hidden rounded-lg bg-gradient-to-br from-gray-900 to-black p-8 transition-all duration-300 hover:-translate-y-2">
          <div class="absolute inset-0 bg-primary/5"></div>
          <div class="relative z-10">
            <h3 class="text-2xl font-bold text-primary mb-4">Responsible Gaming</h3>
            <ul class="space-y-3 text-gray-300">
              <li class="flex items-center">
                <span class="mr-2 text-primary">►</span>
                Limit setting assistance
              </li>
              <li class="flex items-center">
                <span class="mr-2 text-primary">►</span>
                Risk management guidance
              </li>
              <li class="flex items-center">
                <span class="mr-2 text-primary">►</span>
                Regular strategy reviews
              </li>
            </ul>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="relative bg-black py-20">
    <div class="absolute inset-0 bg-gradient-to-t from-primary/10 to-transparent"></div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-4xl font-bold text-white mb-6">
          Ready to Elevate Your Gaming Experience?
        </h2>
        <p class="text-xl text-gray-300 mb-8">
          Connect with our gaming experts and start your journey to mastery today.
        </p>
        <a href="/contact" class="inline-block bg-primary text-black font-bold px-8 py-4 rounded-lg hover:bg-primary/90 transition-colors duration-300">
          Schedule a Consultation
        </a>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="bg-black/95 py-20">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-16 items-center">
        <div class="space-y-6">
          <h2 class="text-3xl font-bold text-white">
            Why Choose <span class="text-primary">GokenSacks</span>
          </h2>
          <div class="space-y-4">
            <div class="flex items-start">
              <div class="flex-shrink-0 w-12 h-12 rounded-full bg-primary/20 flex items-center justify-center">
                <span class="text-primary text-2xl">♦</span>
              </div>
              <div class="ml-4">
                <h3 class="text-xl font-bold text-white mb-2">Expert Guidance</h3>
                <p class="text-gray-300">Professional consultants with decades of industry experience.</p>
              </div>
            </div>
            <div class="flex items-start">
              <div class="flex-shrink-0 w-12 h-12 rounded-full bg-accent/20 flex items-center justify-center">
                <span class="text-accent text-2xl">♠</span>
              </div>
              <div class="ml-4">
                <h3 class="text-xl font-bold text-white mb-2">Personalized Service</h3>
                <p class="text-gray-300">Tailored recommendations based on your unique preferences.</p>
              </div>
            </div>
          </div>
        </div>
        <div class="relative">
          <div class="aspect-square rounded-lg overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-br from-primary/20 to-accent/20"></div>
            <img 
              src="/images/casino-cards.jpg" 
              alt="Casino cards on table"
              class="w-full h-full object-cover mix-blend-overlay"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

</Layout>

<style>
  @keyframes pulse-slow {
    0%, 100% { opacity: 0.1; }
    50% { opacity: 0.3; }
  }
  .animate-pulse-slow {
    animation: pulse-slow 4s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>