---
import Layout from '../layouts/Layout.astro';

const strategies = [
  {
    title: "Bankroll Management",
    description: "Never risk more than 2-5% of your total bankroll on a single bet",
    icon: "üí∞"
  },
  {
    title: "Shop for Lines",
    description: "Compare odds across multiple sportsbooks to find the best value",
    icon: "üîç"
  },
  {
    title: "Focus on Value",
    description: "Look for underpriced teams with strong fundamentals",
    icon: "üéØ"
  },
  {
    title: "Track Your Bets",
    description: "Maintain detailed records to identify winning patterns",
    icon: "üìä"
  }
];

const advancedStrategies = [
  {
    title: "Weather Impact Analysis",
    description: "How precipitation and wind affect passing games and totals"
  },
  {
    title: "Injury Report Deep Dive",
    description: "Key player absences that create betting opportunities"
  },
  {
    title: "Line Movement Tracking",
    description: "Using sharp money flow to predict game outcomes"
  },
  {
