---
const links = [
  { name: "Home", path: "/" },
  { name: "Betting Tips", path: "/betting-tips" },
  { name: "Provider Offers", path: "/provider-offers" },
  { name: "Strategy Guides", path: "/strategy-guides" },
  { name: "About Us", path: "/about-us" },
  { name: "Contact", path: "/contact" },
  { name: "Blog", path: "/blog" }
];

let isOpen = false;

function toggleMenu() {
  isOpen = !isOpen;
}
---

<nav class="bg-[#1D4ED8] shadow-lg">
  <div class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <a href="/" class="text-2xl font-bold text-white hover:text-[#EF4444] transition-colors">
        NFL Betting Pros
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex gap-6">
        {links.map((link) => (
          <a 
            href={link.path} 
            class="font-bold text-white hover:text-[#EF4444] transition-colors px-3 py-2 rounded-md"
          >
            {link.name}
          </a>
        ))}
      </div>
      
      <!-- Mobile Menu Button -->
      <button 
        class="md:hidden text-white focus:outline-none"
        onClick={() => toggleMenu()}
      >
        <svg 
          class="w-6 h-6" 
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24" 
          xmlns="http://www.w3.org/2000/svg"
        >
          {isOpen ? (
            <path 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              stroke-width="2" 
              d="M6 18L18 6M6 6l12 12"
            />
          ) : (
            <path 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              stroke-width="2" 
              d="M4 6h16M4 12h16M4 18h16"
            />
          )}
        </svg>
      </button>
    </div>
    
    <!-- Mobile Navigation -->
    {isOpen && (
      <div class="md:hidden mt-4 bg-[#1D4ED8] rounded-lg">
        <div class="flex flex-col gap-2 py-2">
          {links.map((link) => (
            <a 
              href={link.path} 
              class="font-bold text-white hover:bg-[#EF4444] hover:text-white px-4 py-3 rounded-md transition-colors"
              onClick={() => isOpen = false}
            >
              {link.name}
            </a>
          ))}
        </div>
      </div>
    )}
  </div>
</nav>

<style>
  nav {
    border-bottom: 4px solid #EF4444;
  }
</style>